@page
@model SportFieldBooking.Pages.Reservas.DeleteModel
@{
	ViewData["Title"] = "Eliminar Reserva";
}
<h2>@ViewData["Title"]</h2>

<h3>¿Estás seguro de que deseas eliminar esta reserva?</h3>
<div>
    <h4>Reserva</h4>
    <dl class="row">
        <dt class="col-sm-2">Fecha y Hora de Inicio</dt>
        <dd class="col-sm-10">@Model.Reserva.FechaHoraInicio.ToString("dd/MM/yyyy HH:mm")</dd>

        <dt class="col-sm-2">Fecha y Hora de Fin</dt>
        <dd class="col-sm-10">@Model.Reserva.FechaHoraFin.ToString("dd/MM/yyyy HH:mm")</dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Model.Reserva.Estado</dd>

        <dt class="col-sm-2">Campo</dt>
        <dd class="col-sm-10">@Model.Reserva.Campo.Nombre</dd>

        <dt class="col-sm-2">Cliente</dt>
        <dd class="col-sm-10">@Model.Reserva.Cliente.Nombre @Model.Reserva.Cliente.Apellido</dd>
    </dl>
</div>

<form method="post">
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>