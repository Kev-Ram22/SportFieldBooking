@page
@model SportFieldBooking.Pages.Campos.DeleteModel
@{
    ViewData["Title"] = "Eliminar Campo";
}
<h2>Eliminar Campo</h2>

<h3>¿Estás seguro de que deseas eliminar este campo?</h3>
<div>
    <h4>Campo</h4>
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Campo.Nombre</dd>

        <dt class="col-sm-2">Tipo</dt>
        <dd class="col-sm-10">@Model.Campo.Tipo</dd>

        <dt class="col-sm-2">Ubicación</dt>
        <dd class="col-sm-10">@Model.Campo.Ubicación</dd>

        <dt class="col-sm-2">Tarifa por hora</dt>
        <dd class="col-sm-10">@Model.Campo.TarifaHora.ToString("C")</dd>
    </dl>
</div>

<form method="post">
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>