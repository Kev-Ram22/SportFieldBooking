@page
@model SportFieldBooking.Pages.Campos.CreateModel
@{
	ViewData["Title"] = "Crear Campo";
}
<h1>Crear Campo</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Campo.Nombre" class="control-label"></label>
                <input asp-for="Campo.Nombre" class="form-control" />
                <span asp-validation-for="Campo.Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Campo.Tipo" class="control-label"></label>
                <select asp-for="Campo.Tipo" class="form-control">
                    <option value="">Seleccione el tipo de campo</option>
                    <option value="Fútbol">Fútbol</option>
                    <option value="Básquetbol">Básquetbol</option>
                    <option value="Tenis">Tenis</option>
                    <option value="Voleibol">Voleibol</option>
                    <option value="Otro">Otro</option>
                </select>
                <span asp-validation-for="Campo.Tipo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Campo.Ubicación" class="control-label"></label>
                <input asp-for="Campo.Ubicación" class="form-control" />
                <span asp-validation-for="Campo.Ubicación" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Campo.TarifaHora" class="control-label"></label>
                <input asp-for="Campo.TarifaHora" class="form-control" />
                <span asp-validation-for="Campo.TarifaHora" class="text-danger"></span>
            </div>

            
            <button type="submit" class="btn btn-success" onclick="console.log('Form is being submitted')">Crear</button>

            <a asp-page="Index" class="btn btn-primary">Volver a la lista</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}