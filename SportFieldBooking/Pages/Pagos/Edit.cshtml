@page
@model SportFieldBooking.Pages.Pagos.EditModel
@{
    ViewData["Title"] = "Editar Pago";
}
<h2>Editar Pago</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Pago.IdPago" class="control-label"></label>
        <input asp-for="Pago.IdPago" class="form-control" readonly />
        <span asp-validation-for="Pago.IdPago" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Pago.IdReserva" class="control-label"></label>
        <select asp-for="Pago.IdReserva" class="form-control">
            @foreach (var reserva in ViewData["Reservas"] as List<SportFieldBooking.Models.Reserva>)
            {
                <option value="@reserva.IdReserva">
                    @($"Reserva {reserva.IdReserva} - {reserva.Campo.Nombre} - {reserva.FechaHoraInicio:dd/MM/yyyy HH:mm}")
                </option>
            }
        </select>
        <span asp-validation-for="Pago.IdReserva" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Pago.Monto" class="control-label"></label>
        <input asp-for="Pago.Monto" class="form-control" />
        <span asp-validation-for="Pago.Monto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Pago.FechaPago" class="control-label"></label>
        <input asp-for="Pago.FechaPago" class="form-control" type="date" />
        <span asp-validation-for="Pago.FechaPago" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Pago.MétodoPago" class="control-label"></label>
        <select asp-for="Pago.MétodoPago" class="form-control">
            <option value="Tarjeta">Tarjeta</option>
            <option value="Efectivo">Efectivo</option>
        </select>
        <span asp-validation-for="Pago.MétodoPago" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-page="/Pagos/Index" class="btn btn-secondary">Cancelar</a>
</form>