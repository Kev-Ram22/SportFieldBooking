@page
@model SportFieldBooking.Pages.Pagos.CreateModel
@{
    ViewData["Title"] = "Crear Pago";
}
<h2>Registrar Nuevo Pago</h2>

<form method="post">
    <div class="form-group">
        <label for="IdReserva">Reserva</label>
        <select asp-for="Pago.IdReserva" asp-items="Model.ReservasSelectList" class="form-control"></select>
    </div>
    <div class="form-group">
        <label for="Monto">Monto</label>
        <input asp-for="Pago.Monto" class="form-control" />
        <span asp-validation-for="Pago.Monto" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="FechaPago">Fecha de Pago</label>
        <input asp-for="Pago.FechaPago" class="form-control" type="datetime-local" />
        <span asp-validation-for="Pago.FechaPago" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Metodo">Método de Pago</label>
        <select asp-for="Pago.MétodoPago" class="form-control">
            <option value="">Seleccione un método</option>
            <option value="Tarjeta">Tarjeta</option>
            <option value="Efectivo">Efectivo</option>
        </select>
        <span asp-validation-for="Pago.MétodoPago" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Registrar</button>
</form>

<a asp-page="./Index" class="btn btn-secondary">Volver al listado</a>