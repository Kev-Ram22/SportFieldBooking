@page
@model SportFieldBooking.Pages.Clientes.DeleteModel
@{
	ViewData["Title"] = "Eliminar Cliente";
}
<h2>@ViewData["Title"]</h2>

<h3>¿Estás seguro de que deseas eliminar este cliente?</h3>
<div>
    <h4>Cliente</h4>
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Cliente.Nombre</dd>

        <dt class="col-sm-2">Apellido</dt>
        <dd class="col-sm-10">@Model.Cliente.Apellido</dd>

        <dt class="col-sm-2">Teléfono</dt>
        <dd class="col-sm-10">@Model.Cliente.Teléfono</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Cliente.Email</dd>
    </dl>
</div>

<form method="post">
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>