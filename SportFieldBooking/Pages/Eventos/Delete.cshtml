@page
@model SportFieldBooking.Pages.Eventos.DeleteModel
@{
    ViewData["Title"] = "Eliminar Evento";
}
<h2>@ViewData["Title"]</h2>

<h3>¿Estás seguro de que deseas eliminar este evento?</h3>

<div>
    <h4>Evento</h4>
    <dl class="row">
        <dt class="col-sm-2">Nombre del Evento</dt>
        <dd class="col-sm-10">@Model.Evento.NombreEvento</dd>

        <dt class="col-sm-2">Fecha del Evento</dt>
        <dd class="col-sm-10">@Model.Evento.FechaEvento.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Hora de Inicio</dt>
        <dd class="col-sm-10">@Model.Evento.HoraInicio</dd>

        <dt class="col-sm-2">Hora de Fin</dt>
        <dd class="col-sm-10">@Model.Evento.HoraFin</dd>

        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">@Model.Evento.Descripción</dd>

        <dt class="col-sm-2">Campo</dt>
        <dd class="col-sm-10">@Model.Evento.Campo.Nombre</dd>
    </dl>
</div>

<form method="post">
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>